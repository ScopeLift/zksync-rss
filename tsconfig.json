{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Root of the project
    "paths": {
      "~/*": ["./*"] // Maps '~' to the root directory
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "references": [
    { "path": "./packages/backend" }
  ]
}